<?xml version="1.0"?>
<ruleset name="Laravel">
    <description>Laravel coding standard</description>

    <!-- Exclude vendor directory completely -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>./vendor/*</exclude-pattern>

    <!-- Include only app directory -->
    <file>app</file>
    <file>routes</file>
    <file>config</file>
    <file>database</file>

    <!-- Exclude problematic files -->
    <exclude-pattern>*/tests/fixtures/*</exclude-pattern>
    <exclude-pattern>*/meta/stubs/*</exclude-pattern>
</ruleset>